
.password-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10000;
}

.password-modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 8px;
  text-align: center;
}

.password-title {
  font-size: 18px;
  margin-bottom: 15px;
}

.password-input {
  border: 1px solid #ccc;
  padding: 8px;
  margin-bottom: 15px;
  width: 200px;
  border-radius: 4px;
}

.password-submit {
  background-color: #4CAF50;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  font-size: 16px;
}
